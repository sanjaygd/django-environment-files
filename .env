# .env (Development Environment)

# Django settings
DEBUG=True
SECRET_KEY=your_secret_key
ALLOWED_HOSTS=localhost,127.0.0.1

# Database settings
DB_NAME=mydatabase
DB_USER=myuser
DB_PASSWORD=mypassword
DB_HOST=localhost
DB_PORT=5432

# Email settings (For development, you can use a service like Mailtrap)
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_HOST_USER=your_mailtrap_username
EMAIL_HOST_PASSWORD=your_mailtrap_password

# Media and Static files (For serving media and static files during development)
MEDIA_URL=/media/
MEDIA_ROOT=media/
STATIC_URL=/static/
STATIC_ROOT=static/

# Sentry (optional, for error tracking)
# SENTRY_DSN=

# DEBUG_TOOLBAR (optional, for debugging)
# DEBUG_TOOLBAR=True
# INTERNAL_IPS=127.0.0.1
